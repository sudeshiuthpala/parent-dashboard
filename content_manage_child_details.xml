<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ManageDriverDashboard">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="@string/manage_child_details2" />

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp">


        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#42a5f5"
            android:onClick="onChildInsert"
            android:text="@string/insert_new_child_details"
            tools:ignore="OnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp">

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#42a5f5"
            android:onClick="onCDelete"
            android:text="@string/delete_child"
            tools:ignore="OnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp">

        <Button
            android:id="@+id/button10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#42a5f5"
            android:onClick="onCUpdate"
            android:text="@string/update_child_details"
            tools:ignore="OnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="450dp">

        <Button
            android:id="@+id/button11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#42a5f5"
            android:onClick="onCDisplay"
            android:text="@string/display_child_details"
            tools:ignore="OnClick" />
    </LinearLayout>


</RelativeLayout>